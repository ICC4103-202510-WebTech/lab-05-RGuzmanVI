<h1>Chats</h1>

<%= link_to 'Add new chat', new_chat_path %>

<table>
  <thead>
    <tr>
      <th>Sender ID</th>
      <th>Receiver ID</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.sender_id %></td>
        <td><%= chat.receiver_id %></td>
        <td><%= chat.created_at %></td>
        <td><%= chat.updated_at %></td>
        <td><%= link_to 'Show', chat_path(chat) %></td>
        <td><%= link_to "Edit", edit_chat_path(chat) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
