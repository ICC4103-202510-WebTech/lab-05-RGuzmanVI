<div class="container mt-5">
  <h1 class="mb-4 text-center">Chats</h1>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Sender</th>
        <th>Receiver</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @chats.each do |chat| %>
        <tr>
          <td><%= User.find(chat.sender_id).full_name rescue chat.sender_id %></td>
          <td><%= User.find(chat.receiver_id).full_name rescue chat.receiver_id %></td>
          <td><%= l(chat.created_at, format: :short) %></td>
          <td><%= l(chat.updated_at, format: :short) %></td>
          <td>
            <%= link_to 'Show', chat_path(chat), class: "btn btn-sm btn-info me-1" %>
            <% if can? :edit, chat %>
              <%= link_to "Edit", edit_chat_path(chat), class: "btn btn-sm btn-warning" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-end">
    <%= link_to 'Add new chat', new_chat_path, class: "btn btn-primary" %>
  </div>
</div>


<div class="container mt-5">
  <h1 class="mb-4 text-center">My Inbox</h1>
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Chat with</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @chats.each do |chat| %>
          <tr>
            <td><%= chat.other_participant(current_user).full_name %></td>
            <td>
              <%= link_to "View", chat_path(chat), class: "btn btn-primary btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
