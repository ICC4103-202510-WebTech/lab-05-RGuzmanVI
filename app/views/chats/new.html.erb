<h1>New Chat</h1>

<%= form_with model: @chat, local: true do |f| %>
  <% if @chat.errors.any? %>
    <ul>
      <% @chat.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :sender_id, "Sender" %>
    <%= f.select :sender_id, options_from_collection_for_select(@users, :id, :email) %>
  </div>

  <div>
    <%= f.label :receiver_id, "Receiver" %>
    <%= f.select :receiver_id, options_from_collection_for_select(@users, :id, :email) %>
  </div>

  <%= f.submit "Create Chat" %>
<% end %>
