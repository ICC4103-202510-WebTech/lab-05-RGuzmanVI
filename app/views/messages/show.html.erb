<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h2>Message Details</h2>
    </div>
    <div class="card-body">
      <p><strong>Chat ID:</strong> <%= @message.chat_id %></p>
      <p><strong>Sender:</strong> <%= @message.sender.full_name %></p>
      <p><strong>Receiver:</strong> <%= @message.receiver.full_name %></p>
      <p><strong>Message:</strong> <%= @message.body %></p>
      <p><strong>Created At:</strong> <%= @message.created_at.strftime("%Y-%m-%d %H:%M") %></p>
      <p><strong>Updated At:</strong> <%= @message.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <%= link_to 'Back to Messages', messages_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
