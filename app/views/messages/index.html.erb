<div class="container mt-4">
  <h1 class="mb-4 text-center">Messages</h1>

  <table class="table table-striped table-hover table-responsive">
    <thead class="table-dark">
      <tr>
        <th>Chat ID</th>
        <th>Sender</th>
        <th>Receiver</th>
        <th>Message</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.chat_id %></td>
          <td><%= message.sender.full_name %></td>
          <td><%= message.receiver.full_name %></td>
          <td><%= message.body %></td>
          <td><%= message.created_at.strftime("%d %b %Y, %H:%M") %></td>
          <td><%= message.updated_at.strftime("%d %b %Y, %H:%M") %></td>
          <td>
            <%= link_to 'Show', message_path(message), class: "btn btn-sm btn-info me-1" %>
            <% if can? :edit, message %>
              <%= link_to 'Edit', edit_message_path(message), class: "btn btn-sm btn-warning" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-end">
    <%= link_to 'Add new message', new_message_path, class: "btn btn-primary" %>
  </div>
</div>