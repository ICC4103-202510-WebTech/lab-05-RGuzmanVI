<div class="container mt-4">
  <h1 class="mb-4">User Details</h1>

  <div class="card mb-4">
    <div class="card-body">
      <h3 class="card-title"><%= @user.full_name %></h3>
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Created at:</strong> <%= @user.created_at.strftime("%d %b %Y, %H:%M") %></p>
      <p><strong>Updated at:</strong> <%= @user.updated_at.strftime("%d %b %Y, %H:%M") %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h2>Chats</h2>
      <ul class="list-group mb-4">
        <% @user.sent_chats.each do |chat| %>
          <li class="list-group-item">Chat con <%= chat.receiver.full_name %></li>
        <% end %>
        <% @user.received_chats.each do |chat| %>
          <li class="list-group-item">Chat con <%= chat.sender.full_name %></li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-6">
      <h2>Mensajes enviados</h2>
      <ul class="list-group mb-4">
        <% @user.messages.each do |msg| %>
          <li class="list-group-item"><%= msg.body %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <%= link_to 'Back to Users', users_path, class: "btn btn-primary" %>
</div>
