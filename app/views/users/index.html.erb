<div class="container mt-4">
  <h1 class="mb-4 text-center">Users</h1>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Messages Sent</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.messages.count %></td>
          <td>
            <%= link_to 'Show', user_path(user), class: "btn btn-sm btn-info me-1" %>
            <% if can? :edit, user %>
              <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-warning" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>