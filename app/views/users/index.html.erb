<h1>Users</h1>

<%= link_to 'Add new user', new_user_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to "Edit", edit_user_path(user) %></td>
        <th>Messages Sent</th>
        <td><%= user.messages.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
